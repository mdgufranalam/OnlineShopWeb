@using System.Globalization
@model OnlineShop.Models.Category

@{
    ViewData["Title"] = "Edit";
}

<div class="row pt-4">
        <div class="col-6">
            <h2>Edit Category</h2>
		</div>
       <div class="col-6 text-end">            
             <a asp-action="Index" class="btn btn-dark">Back to List</a>
		</div>
	</div>
    <hr />


<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" disabled />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatedDateTime" class="control-label"></label>
                @{
                   CultureInfo ci = CultureInfo.InvariantCulture;
                   string CreatedDate = Model.CreatedDateTime.ToString("dd-MMM-yyyy hh:mm tt", ci);
                   <input asp-for="@CreatedDate" class="form-control" disabled />
                }
                <span asp-validation-for="CreatedDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />                
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
